{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} Créer un compte{% endblock %}

{% block section %}
    <div class="-container mt-3">
    	<div class="row">
    		<div class="col-10 bg-white p-2 shadow-sm mx-auto">
                <div class="h3 text-center">Les offres d'emploi récemeent publié</div>
                <hr>
                <br>
    			<div class="row">
                {% for offre in offres %}
                    <div class="col-4 my-2">
                        <div class="card rounded-0">
                            <div class="card-header">
                                {{ offre.titre }} <span class="h6 float-right">le {{ offre.datePublication | date('d/m/Y') }}</span>
                            </div>
                            <div class="card-body">
                                {{ offre.summary }} ... <a href="{{ path('offre', {'id': offre.id}) }}" class="stretched-link text-decoration-none">Voir en détail.</a>
                            </div>
                            <div class="card-footer">
                                Date d'expiration: {{ offre.dateExpiration | date('d/m/Y') }}
                            </div>
                        </div>
                    </div>
                {% else %}
                    Il ya aucune offre valide pour le moment         
                {% endfor %}         
                </div>
    		</div>
    	</div>
    </div>
{% endblock %}
